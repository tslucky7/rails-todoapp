!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= content_for(:title) || "Rails Todoapp"
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}/
    %meta{:content => "yes", :name => "mobile-web-app-capable"}/
    = csrf_meta_tags
    = csp_meta_tag
    = yield :head
    %link{:href => "/icon.png", :rel => "icon", :type => "image/png"}/
    %link{:href => "/icon.svg", :rel => "icon", :type => "image/svg+xml"}/
    %link{:href => "/icon.png", :rel => "apple-touch-icon"}/
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_include_tag "application", "data-turbo-track": "reload", type: "module"
  %body
    %header.header
      .header_logos
        %p.header_pageTitle
          = link_to 'Boards', root_path
        - if user_signed_in?
          %nav.dropdown
            -# = image_tag current_user.avatar_image, class: 'header_avatar dropbtn'
            - if current_user.icon.attached?
              = image_tag current_user.icon, class: 'user-icon'
            - else
              = image_tag 'User1.png', class: 'user-icon'
              %ul.dropdown-content
                %li.dropdown-content__item
                  = link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }
        - else
          %nav.dropdown
            = image_tag 'default-avatar.png', class: 'user-icon'
            %ul.dropdown-content
              %li.dropdown-content__item
                = link_to "Sign in", new_user_session_path
              %li.dropdown-content__item
                = link_to "Sign up", new_user_registration_path
    %p.notice= notice
    %p.alert= alert
    = yield
