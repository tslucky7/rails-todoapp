.container
  %h2 Brackets
  .content-inner.cards-list
    - @tasks.each do |task|
      = link_to board_task_path(@board, task), class: 'card-item' do
        - if task.image.attached?
          .task-image.card-item__image
            = image_tag(task.image, class: 'task-image__img')
        .card-item__top
          %h3.card-item__title
            = task.title
        .card-item__description
          = task.description
        .card-item__bottom
          - if task.user.icon.attached?
            = image_tag task.user.icon, class: 'user-icon'
          - else
            = image_tag 'default-avatar.png', class: 'user-icon'
          .card-item__comments
            .card-item__comments-counts 0
            .card-item__comments-icon
              = image_tag 'message-square-outline.svg', class: 'card-item__comments-icon-img'
    .add-new-entry
      - if user_signed_in?
        = link_to new_board_task_path(@board), class: "add-new-entry__link" do
          %span.add-new-entry__link-text + Add new task
      - else
        = link_to new_user_session_path, class: "add-new-entry__link" do
          %span.add-new-entry__link-text + Add new task