.container
  %h2= title
  = form_with(model: [board, task], local: true, multipart: true) do |f|
    - if task.errors.any?
      .error-messages
        %ul
          - task.errors.full_messages.each do |message|
            %li= message
    .content-inner
      .field
        = f.label :title
        %br/
        = f.text_field :title
      .field
        = f.label :description
        %br/
        = f.text_area :description
      .field
        = f.label :deadline
        %br/
        = f.datetime_field :deadline
      .field
        = f.label :image
        %br/
        = f.file_field :image
      .actions
        = f.submit button_text, class: "submit-btn"